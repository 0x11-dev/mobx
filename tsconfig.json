{
    "version": "1.6.2",
    "compilerOptions": {
        "target": "es5",
        "outDir": ".build",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "removeComments": true
    },
    "files": [
        "./lib/dnode.ts",
        "./lib/utils.ts",
        "./lib/scheduler.ts",
        "./lib/simpleeventemitter.ts", 
        "./lib/observablevalue.ts", 
        "./lib/observableview.ts",
        "./lib/observablearray.ts", 
        "./lib/observableobject.ts",
        "./lib/extras.ts", 
        "./lib/core",
        "./lib/index.ts"
    ],
    "filesGlob": [
        "./lib/*.ts",
        "!./node_modules/**/*.ts",
        "!./dist/*.d.ts",
        "!./test/*.ts"
    ]
}
